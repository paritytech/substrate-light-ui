{
  "name": "@polkadot/light-ui",
  "version": "0.1.0",
  "repository": "https://github.com/polkadot-js/light-ui",
  "description": "User interface optimized for the Substrate light client",
  "license": "Apache-2.0",
  "workspaces": [
    "packages/*"
  ],
  "private": true,
  "scripts": {
